<h3>以下の内容で投稿しますか？</h3>

<%= form_with(model: @picture, local: true, url: pictures_path) do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>

  <p>画像:</p>
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <p>内容:<%= @picture.content %></p>

  <%= form.submit "登録する", class: "btn btn-primary" %>
  <%= form.submit "戻る", name: "back" ,class: "btn btn-warning"%>
<% end %>
